{% extends 'base.html.twig' %}

{%block body%}
<div class="container" style="width: 100%">
	<div class="row" style="width: 100%">
		<div class="col-md-12" style="width: 100%">
			<h1>List of my pending jobs</h1>
			<table class="table">
				<thead>
					<tr>
						<th>Title</th>
						<th>Company</th>
						<th>Description</th>
						<th>Candidate</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for job in jobs %}
					<tr>
						<td>{{ job.title }}</td>
						<td>{{ job.company }}</td>
						<td>{{ job.description }}</td>
						<td>
							<div>
								<a class="btn btn-primary" aria-current="page" href="{{ path('accept_candidate') }}">Accept</a>
							</div>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{%endblock%}