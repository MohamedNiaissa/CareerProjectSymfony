{% extends 'base.html.twig' %}

{%block body%}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Les articles</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Compagnie</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in allJobs %}
                    <tr>
                        <td>{{ job.title }}</td>
                        <td>{{ job.company }}</td>
                        <td>{{ job.location }}</td>
                        <td>{{ job.status }}</td>
                        <td>{{ job.date }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{%endblock%}